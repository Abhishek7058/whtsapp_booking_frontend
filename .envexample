# WhatsApp CRM Frontend Environment Variables
# Local development configuration

# Application Configuration
NEXT_PUBLIC_APP_NAME=WhatsApp CRM
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication Configuration
NEXT_PUBLIC_AUTH_TOKEN_KEY=accessToken
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_KEY=refreshToken
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=900000

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws
NEXT_PUBLIC_WEBSOCKET_MAX_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WEBSOCKET_RECONNECT_DELAY=3000

# Feature Flags
NEXT_PUBLIC_FEATURE_REAL_TIME_CHAT=true
NEXT_PUBLIC_FEATURE_VOICE_MESSAGES=true
NEXT_PUBLIC_FEATURE_FILE_UPLOAD=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
NEXT_PUBLIC_UPLOAD_ENDPOINT=/api/v1/upload

# Development Configuration
NEXT_PUBLIC_DEV_TOOLS=true
NEXT_PUBLIC_REACT_QUERY_DEVTOOLS=true
NEXT_PUBLIC_MOCK_API=false

# Performance Configuration
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_CACHE_DURATION=3600
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_AVAILABLE_THEMES=light,dark,system
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_AVAILABLE_LANGUAGES=en,es,fr,de,pt

# Security Configuration
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_FORCE_HTTPS=false
NEXT_PUBLIC_SECURE_COOKIES=false

# Monitoring and Analytics
NEXT_PUBLIC_ERROR_REPORTING=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_USER_ANALYTICS=false

# Notification Configuration
NEXT_PUBLIC_NOTIFICATION_TIMEOUT=5000
NEXT_PUBLIC_MAX_NOTIFICATIONS=5
NEXT_PUBLIC_ENABLE_SOUND_NOTIFICATIONS=true

# Chat Configuration
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=4096
NEXT_PUBLIC_TYPING_TIMEOUT=3000
NEXT_PUBLIC_MESSAGE_POLLING_INTERVAL=5000

# Build Configuration
NODE_ENV=development
GENERATE_SOURCEMAP=true
ANALYZE=false
